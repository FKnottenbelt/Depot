<h1>Who bought: <%= @product.title %></h1>
<table>
  <tr>
    <th>Product</th>
    <th>Price</th>
    <th>Date</th>
  </tr>
  <tbody>
    <td><%= @product.title %></td>
    <td><%= number_to_currency @product.price %></td>
    <td><%= @latest_order.updated_at %></td>
  </tbody>
</table>
<p>Paid by <%= @latest_order.pay_type %></p>
<p><%= @latest_order.name %>, <%= @latest_order.email %></p>
